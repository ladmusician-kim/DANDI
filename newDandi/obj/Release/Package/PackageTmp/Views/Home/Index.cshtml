@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style {
    <link href="~/Lib/css/home/index.css" rel="stylesheet" />
}
@section Script {
    <script src="~/Lib/js/common/web/jquery.fullPage.js"></script>
    <script src="~/Lib/js/home/index.js"></script>
}

<div class="dandi-footer">
    DANDI?
</div>

<div id="fullpage" ng-controller="HomeCtrl">
    <div class="section bg-dark-alfa-50" id="section0">
        <div class="row">
            <div class="col-sm-6 col-lg-offset-3">
                <div class="row">
                    <div class="col-sm-12 dandi-title">
                        DANDIMARKET
                    </div>
                    <div class="dandi-content col-sm-12 mt-20" data-anim-type="flip-in-top-front" data-anim-delay="800">
                        모두 각자 자신만의 색깔과 개성이 있고 그것을 공유하는데는 단순한 '장'만있으면 된다.
                        MARKET이라는 소비적인 활동을 넘어서서 서로 소통하고 교류할 수 있는 그런 '장'!
                        '단디마켓'은 여러분들 각자의 색깔을 함께 조화시키고 넘어서서 새로운 색깔을
                        만들어 보려고 합니다. 단순 판매자와 소비자관계의 '장'이아닌 서로 공감하고
                        소통할 수 있는 그런 소통의 공간 '단디마켓' '단디프로젝트'와 함께합니다!
                    </div>
                </div>
                <div class="row mt-30">
                    <div class="col-sm-6 dandi-btn-login">
                        <a class="dandi-btn ">로그인</a>
                    </div>
                    <div class="col-sm-6 dandi-btn-assign">
                        <a class="dandi-btn ">회원가입</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section bg-dark-alfa-50" id="section1">
        <div class="row">
            <div class="intro col-sm-12">
                <h1 class="animate-init align-center" data-anim-type="fade-in-down-big" data-anim-delay="50">
                    JOIN US?
                </h1>
                <p class="animate-init align-center" data-anim-type="flip-in-top-front" data-anim-delay="800">
                    갈때가더라도 10초 정도는 줄 수 있잖아?
                </p>
            </div>
            <div class="dandi-form col-sm-4 col-lg-offset-4">
                @*<div class="mb-20">
                    <input id="dandi-sign-input-username" class="form-control dandi-sign-username"
                           ng-model="user.username"
                           type="text" placeholder="사용하실 닉네임." />
                </div>*@
                <div class="mb-20 mt-20">
                    <input id="dandi-sign-input-email" class="dandi-sign-email form-control"
                           ng-model="user.email"
                           type="text" placeholder="현재 사용하시는 이메일 주소를 입력해 주세요." />
                </div>
                <div class="mb-20">
                    <input id="dandi-sign-input-pwd" class="dandi-sign-password form-control" type="password"
                           ng-model="user.password"
                           placeholder="비밀번호 (6자리 이상)" />
                </div>
                <div class="mb-20">
                    <input id="dandi-sign-input-confirmPwd" class="dandi-sign-confirmPassword form-control" type="password"
                           ng-model="user.confirmPassword"
                           placeholder="비밀번호 확인 (6자리 이상)" />
                </div>
                <div class="mb-20">
                    <input type="button" class=" btn btn-mod dandi-btn dandi-btn-sign-complete"
                           ng-click="sign()"
                           value="가입하기" />
                </div>
            </div>
            <div class="col-sm-12 align-center">
                <a class="dandi-already-login animate-init align-center" data-anim-type="flip-in-top-front" data-anim-delay="800">
                    이미 아이디가 있다면?! <br/>
                    <i class="fa fa-arrow-down"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="section bg-dark-alfa-50" id="section2">
        <div class="intro">
            <div class="row align-center">
                <h1 class="animate-init dandi-relative" data-anim-type="fade-in-down-big" data-anim-delay="50">
                    ARE YOU READY
                </h1>
                <p class="animate-init dandi-relative" data-anim-type="flip-in-top-front" data-anim-delay="800">
                    단디 준비해라?
                </p>
                @using (Html.BeginForm("Login", "Account", new { }, FormMethod.Post))
                {
                    <div class="dandi-form col-sm-offset-4 col-sm-4">
                        <div class="mb-20 mt-20">
                            <input id="dandi-login-input-email"
                                   name="email"
                                   class="form-control" type="text" placeholder="이메일 주소를 입력해 주세요." />
                        </div>
                        <div class="mb-20">
                            <input id="dandi-login-input-pwd"
                                   name="password"
                                   class="form-control" type="password" placeholder="비밀번호" />
                        </div>
                        <div class="mb-20">
                            <input type="submit" class="btn btn-mod dandi-btn dandi-btn-sign-complete" value="로그인하기" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
