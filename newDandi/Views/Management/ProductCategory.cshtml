@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
    <link href="~/Lib/css/common/ng-table.css" rel="stylesheet" />
}
@section Script {
    <script src="@Url.Content("/Lib/management/js/productCategory.js")"></script>>
}

<section id="content" ng-controller="ManagementCtrl">
    <section class="vbox">
        <header class="header bg-success bg-gradient">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#seller" data-toggle="tab">물품 카테고리</a></li>
            </ul>
        </header>
        <section class="scrollable wrapper">
            <div class="tab-content">
                <div class="col-lg-6  tab-pane active" id="seller">
                    <section class="panel">
                        <header class="panel-heading">
                            총 카테고리 수: <span style="color:#ff4444">{{productCategory.totalCount}}명</span>
                        </header>
                        <div class="table-responsive">
                            <table ng-table="tableParams" class="table table-striped m-b-none text-sm">
                                <tr ng-repeat="item in productCategory.items">
                                    <td data-title="'번호'" sortable="'Id'">
                                        {{item.Id}}
                                    </td>
                                    <td data-title="'분류'" sortable="'Label'">
                                        <a href="/Management/DetailProductCategory?id={{item.Id}}">
                                            {{item.Label}}
                                        </a>
                                    </td>
                                    <td data-title="'상태'" sortable="'IsDeprecated'">
                                        <span ng-if="item.IsDeprecated" style="color: #ff4444;">
                                            삭제됨
                                        </span>
                                        <span ng-if="!item.IsDeprecated">
                                            사용중
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-lg-12 m-t align-center">
                            <a href="/Management/AddProductCategory" class="btn btn-s-md btn-primary">카테고리 추가</a>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
