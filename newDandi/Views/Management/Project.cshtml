@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
    <link href="~/Lib/css/common/ng-table.css" rel="stylesheet" />
}
@section Script {
    <script src="@Url.Content("/Lib/management/js/project.js")"></script>>
}

<section id="content" ng-controller="ManagementCtrl">
    <section class="vbox">
        <header class="header bg-success bg-gradient">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#seller" data-toggle="tab">회원관리</a></li>
            </ul>
        </header>
        <section class="scrollable wrapper">
            <div class="tab-content">
                <div class="tab-pane active" id="seller">
                    <section class="panel">
                        <header class="panel-heading">
                            총 프로젝트 수: <span style="color:#ff4444">{{project.totalCount}}명</span>
                        </header>
                        <div class="table-responsive">
                            <table ng-table="tableParams" class="table table-striped m-b-none text-sm">
                                <tr ng-repeat="item in project.items">
                                    <td data-title="'번호'" sortable="'Id'">
                                        {{item.Id}}
                                    </td>
                                    <td data-title="'타이틀'" sortable="'Title'">
                                        {{item.Title}}
                                    </td>
                                    <td data-title="'시작일'" sortable="'StartDate'">
                                        {{item.StartDate | shortdate}}
                                    </td>
                                    <td data-title="'마감일'" sortable="'EndDate'">
                                        {{item.EndDate | shortdate}}
                                    </td>
                                    <td data-title="'생성일'" sortable="'Created'">
                                        {{item.Created | shortdate}}
                                    </td>
                                    <td data-title="'수정일'" sortable="'Updated'">
                                        <span ng-if="item.Updated != null">
                                            {{item.Updated | shortdate}}
                                        </span>
                                    </td>
                                    <td data-title="'상태'" sortable="'IsDeprecated'">
                                        <span ng-if="item.IsDeprecated">
                                            삭제됨
                                        </span>
                                        <span ng-if="!item.IsDeprecated">
                                            
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-lg-12 m-t align-center">
                            <a href="/Management/AddProject" class="btn btn-s-md btn-primary">프로젝트 추가</a>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
