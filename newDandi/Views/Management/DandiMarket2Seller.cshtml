@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
    <link href="~/Lib/css/common/ng-table.css" rel="stylesheet" />
}
@section Script {
    <script src="~/Lib/management/js/market2seller.js"></script>
}

<section id="content" ng-controller="ManagementCtrl">
    <section class="vbox">
        <header class="header bg-success bg-gradient">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#seller" data-toggle="tab">SELLER</a></li>
            </ul>
        </header>
        <section class="scrollable wrapper">
            <div class="tab-content">
                <div class="tab-pane active" id="seller">
                    <section class="panel">
                        <header class="panel-heading">
                            셀러신청 현황 - <span style="color: #ff4444;">총 {{requestSeller.totalCount}}신청</span>
                        </header>
                        <div class="table-responsive">
                            <table ng-table="tableParams" class="table table-striped m-b-none text-sm">
                                <tr ng-repeat="item in requestSeller.items">
                                    <td data-title="'번호'" sortable="'Id'">
                                        {{item.Id}}
                                    </td>
                                    <td data-title="'이름'" sortable="'Name'">
                                        <a href="/Management/DandiMarket2SellerDetail?id={{item.Id}}">{{item.Name}}</a>
                                    </td>
                                    <td data-title="'연락처'">
                                        {{item.Phone}}
                                    </td>
                                    <td data-title="'제출일'" sortable="'Submited'">
                                        {{item.Submited | shortdate}}
                                    </td>
                                    <td data-title="'수정일'" sortable="'Updated'">
                                        <span ng-if="item.Updated!= null">
                                            {{item.Updated | shortdate}}
                                        </span>
                                    </td>
                                    <td data-title="'확인일'" sortable="'Checked'">
                                        <span ng-if="item.Checked != null">
                                            {{item.Checked | shortdate}}
                                        </span>
                                    </td>
                                    <td data-title="'선택여부'" sortable="'IsChecked'">
                                        <span ng-if="item.IsChecked" style="color: #ff4444">
                                            확정
                                        </span>
                                        <span ng-if="!item.IsChecked">
                                            미확정
                                        </span>
                                    </td>
                                    <td data-title="'자세히보기'">
                                        <a href="/Management/DandiMarket2SellerDetail?id={{item.Id}}">보기</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
