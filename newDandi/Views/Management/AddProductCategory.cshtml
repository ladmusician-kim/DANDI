@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
}
@section Script {
    <script src="@Url.Content("/Lib/management/js/addProductCategory.js")"></script>
}

<section id="content">
    <section class="vbox">
        <header class="header bg-white b-b">
            <p>카테고리 추가</p>
        </header>
        <section class="scrollable wrapper">
            <div class="row">
                <div class="col-lg-6">
                    <section class="panel">
                        <div class="panel-body">
                            @using (Html.BeginForm("AddProductCategory", "Management", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <p class="dandi-sub-title m-t">카테고리</p>
                                <p class="dandi-description">
                                    <input type="text" class="form-control" placeholder="카테고리 이름" name="label">
                                </p>
                                <div class="line"></div>

                                <p class="align-right">
                                    <a href="/Management/ProductCategory" class="btn btn-s-md btn-default">목록보기</a>
                                    <input type="submit" class="btn btn-s-md btn-danger" value="추가하기" />
                                </p>
                            }
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
