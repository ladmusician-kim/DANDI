@{
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
}
@section Style {
    <link href="~/Lib/css/common/ng-table.css" rel="stylesheet" />
}
@section Script {
    <script src="@Url.Content("/Lib/management/js/market2picture.js")"></script>
}

<section id="content" ng-controller="ManagementCtrl">
    <section class="vbox">
        <header class="header bg-success bg-gradient">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#seller" data-toggle="tab">사진관리</a></li>
            </ul>
        </header>
        <section class="scrollable wrapper">
            <div class="tab-content">
                <div class="tab-pane active" id="seller">
                    <section class="panel">
                        <header class="panel-heading">
                            총 사진 수: <span style="color:#ff4444">{{daypic.totalCount}}명</span>
                        </header>
                        <div class="table-responsive">
                            <table ng-table="tableParams" class="table table-striped m-b-none text-sm">
                                <tr ng-repeat="item in daypic.items">
                                    <td data-title="'번호'" sortable="'Id'">
                                        {{item.Id}}
                                    </td>
                                    <td data-title="'타이틀'" sortable="'Title'">
                                        <span ng-if="item.Title != null">
                                            {{item.Title}}
                                        </span>
                                    </td>
                                    <td data-title="'생성일'" sortable="'Created'">
                                        {{item.Created | shortdate}}
                                    </td>
                                    <td data-title="'수정일'" sortable="'Updated'">
                                        <span ng-if="item.Updated != null">
                                            {{item.Updated | shortdate}}
                                        </span>
                                    </td>
                                    <td data-title="'표시여부'" sortable="'IsDeprecated'">
                                        <span ng-if="item.IsDeprecated" style="color:#ff4444;">
                                            삭제됨
                                        </span>
                                        <span ng-if="!item.IsDeprecated">
                                            표시중
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-lg-12 m-t align-center">
                            <a href="/Management/DandiMarket2AddPicture" class="btn btn-s-md btn-primary">사진추가</a>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
